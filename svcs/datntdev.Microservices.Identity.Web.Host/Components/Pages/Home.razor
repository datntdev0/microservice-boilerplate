@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<AuthorizeView>
  <Authorized>
    <p>You are logged in! <a href="#" onclick="signout()">Sign Out</a></p>
    <p>Current User: @context.User.Identity?.Name</p>
  </Authorized>
  <NotAuthorized>
    <p>You are not logged in. <a href="/auth/signin">Sign In</a></p>
  </NotAuthorized>
</AuthorizeView>