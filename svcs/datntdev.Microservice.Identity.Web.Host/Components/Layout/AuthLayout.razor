@inherits LayoutComponentBase

<div class="d-flex flex-column flex-root">
  <style>
    [data-bs-theme="light"] body {
      background-image: url('/images/auth-bg-light.jpg');
    }

    [data-bs-theme="dark"] body {
      background-image: url('/images/auth-bg-dark.jpg');
    }
  </style>
  <div class="d-flex flex-column flex-lg-row flex-column-fluid">
    <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12">
      <div class="bg-body d-flex flex-column flex-center rounded-4 w-md-600px p-10">
        <div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-400px">
          @Body
        </div>
      </div>
    </div>
    <div class="d-flex flex-lg-row-fluid">
      <div class="d-flex flex-column flex-center p-10 w-100">
        <img class="mx-auto mw-100 w-350px w-lg-500px mb-10 mb-lg-20" src="/images/auth-illustration.svg" />
        <h1 class="text-gray-800 fs-2qx fw-bold text-center mb-7 mw-100 w-500px w-lg-700px">
          Fast, Efficient and Productive
        </h1>
        <div class="text-gray-600 fs-base text-center fw-semibold mw-100 w-500px w-lg-700px">
          A fast, clean foundation built for scalable microservices.
          Includes essential tools, structured patterns, and developer-friendly 
          defaults to kickstart productivity and simplify service orchestration.
        </div>
      </div>
    </div>
  </div>
</div>
